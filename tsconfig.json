{
  "compilerOptions": {                  
    "target": "ES2017",                         
    "module": "commonjs",                                        
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "strict": true,      
    "strictPropertyInitialization": false,  
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,          
    "skipLibCheck": true, 
    "removeComments": true,                 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*":  ["shared/*"],
      "@config/*":  ["config/*"]
    }  
  }
}
