{
  "compilerOptions": {                  
    "target": "ES2017",                         
    "module": "commonjs",                    
    "allowJs": true,                       
    "checkJs": true,                       
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "strict": true,      
    "strictPropertyInitialization": false,  
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,          
    "skipLibCheck": true, 
    "removeComments": true,                 
    "forceConsistentCasingInFileNames": true  
  }
}
